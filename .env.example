# Hostaway MCP Server - Environment Variables
# Copy this file to .env and fill in your actual values

# ==============================================================================
# Supabase Configuration (Multi-Tenant Backend)
# ==============================================================================
# Get these from: Supabase Dashboard > Settings > API
SUPABASE_URL=http://127.0.0.1:54321  # Local: http://127.0.0.1:54321 | Prod: https://xxx.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key_here  # ⚠️ NEVER expose to frontend - bypasses RLS
SUPABASE_ANON_KEY=your_anon_key_here  # Safe for frontend use

# ==============================================================================
# Stripe Configuration (Billing)
# ==============================================================================
# Get these from: Stripe Dashboard > Developers > API keys
STRIPE_SECRET_KEY=sk_test_xxx  # Backend only - Test: sk_test_xxx | Live: sk_live_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx  # Frontend safe - Test: pk_test_xxx | Live: pk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx  # From: Stripe Dashboard > Developers > Webhooks
STRIPE_LISTING_PRICE_ID=price_xxx  # Price ID for $5/listing/month subscription

# ==============================================================================
# Hostaway API (Legacy - for testing/development only)
# ==============================================================================
# Production users connect their own credentials through dashboard
# These are only for testing the MCP server without multi-tenant setup
HOSTAWAY_ACCOUNT_ID=your_account_id_here
HOSTAWAY_SECRET_KEY=your_secret_key_here
HOSTAWAY_API_BASE_URL=https://api.hostaway.com/v1

# ==============================================================================
# Rate Limiting
# ==============================================================================
RATE_LIMIT_IP=20  # Requests per 10 seconds per IP
RATE_LIMIT_ACCOUNT=20  # Requests per 10 seconds per account
MAX_CONCURRENT_REQUESTS=50  # Maximum concurrent requests
TOKEN_REFRESH_THRESHOLD_DAYS=7

# ==============================================================================
# Application Configuration
# ==============================================================================
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR
ENVIRONMENT=development  # development | staging | production
